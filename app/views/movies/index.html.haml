-#  This file is app/views/movies/index.html.haml
%h2 All Movies

%table#movies.table.table-striped.col-md-12
  %thead
    %tr
      %th { class: (if params[:order_by] == "title" then "hilite" end) }
        %a { href: movies_path(:order_by => 'title'), :id => "title_header" } 
          Movie Title
      %th Rating
      %th { class: (if params[:order_by] == "release_date" then "hilite" end)}
        %a { href: movies_path(:order_by => 'release_date'), :id => "release_date_header" } 
          Release Date
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
